    npmModuleScope: "@exampleScope/"
    solidCommonVocabVersion: "^1.4.0"
    artifactDirectoryName: JavaScript
    templateInternal: solidCommonVocabDependent/javascript/vocab.hbs
    sourceFileExtension: js

